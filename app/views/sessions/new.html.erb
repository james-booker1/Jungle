<section class="login">
<header class="signup">
<h1>Login</h1>
</header>
<%= form_tag '/login' do %>

  <div>Email: <div><%= text_field_tag :email %></div>
  <div>Password: <div><%= password_field_tag :password %></div>
  <div class="submit"><%= submit_tag "Submit" , class:"btn btn-success"%></div>

<% end %>
</section>