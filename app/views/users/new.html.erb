<section class="user-login">
<header class="signup">
<h1>Signup!</h1>
</header>
<%= form_for :user, url: '/users' do |f| %>
<div>
 <div> Name: <div><%= f.text_field :name %></div></div>
  <div> Email: <div><%= f.text_field :email %></div></div>
  <div>Password: <div><%= f.password_field :password %></div></div>
  <div>Password Confirmation: <div><%= f.password_field :password_confirmation %></div></div>
  <div class="submit"><%= f.submit "Submit", class:"btn btn-success" %>
</div>
<% end %>
</section>